<Window x:Class="Converter_Braille.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Converter_Braille"
        mc:Ignorable="d"
        Title="     Настройки" ResizeMode="NoResize" Height="150" Width="250" Closing="Window_Closing">
    <Grid>
        <TextBox x:Name="textBox_letter" HorizontalAlignment="Left" Height="23" Margin="170,10,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="43"/>
        <TextBox x:Name="textBox_line" HorizontalAlignment="Left" Height="23" Margin="170,44,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="43"/>
        <Label x:Name="label_letter" Content="Количество символов
" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
        <Label x:Name="label_line" Content="Количество строк" HorizontalAlignment="Left" Margin="10,44,0,0" VerticalAlignment="Top"/>
        <Button x:Name="button_save" Content="Save" Margin="154,84,0,0" VerticalAlignment="Top" Width="70" Click="button_save_Click"/>

    </Grid>
</Window>
